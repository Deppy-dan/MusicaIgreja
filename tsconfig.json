{
  "files": [],
  "references": [ 
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "emitDeclarationOnly": true,
    "composite": true,
    "jsx": "react-jsx",
    "target": "es6",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "strict": true,
    "esModuleInterop": true,
    "lib": ["es2016", "dom"],
    "baseUrl": "./resources/js",
    "typeRoots": ["./node_modules/@types"],
    "paths": {
      "@/*": ["./*"],
      "*": ["*.ts", "*.tsx", "*.jsx", "*.js"]
    },
    "forceConsistentCasingInFileNames": true
  },
  "include": ["resources/js"], // Inclua os arquivos de origem
  "exclude": ["node_modules", "public"] // Exclua diretórios desnecessários
}